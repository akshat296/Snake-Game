{   
    // move this file in the outer directory of ./vscode/launch.json
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Server-Backend",
            "program": "${workspaceRoot}/snake-backend/server.js",
            "skipFiles": [
                "${workspaceRoot}/snake-backend/node_modules/**/**/*.js",
                "<node_internals>/**/*.js",
                "${workspaceRoot}/snake-backend/lib/**/*.js"
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Client",
            "url": "http://localhost:3037",
            "webRoot": "${workspaceFolder}",
            "skipFiles": [
                "${workspaceRoot}/snake-front-end/node_modules/**/*.js",
                "<node_internals>/**/*.js",
                "${workspaceRoot}/snake-front-end/lib/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Server",
            "program": "${workspaceFolder}/snake-front-end/index.js",
            "skipFiles": [
                "${workspaceRoot}/snake-front-end/node_modules/**/**/*.js",
                "<node_internals>/**/*.js",
                "${workspaceRoot}/snake-front-end/lib/**/*.js"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Full-Stack",
            "configurations": [
                "Client",
                "Server",
                "Server-Backend"
               
            ]
        }
    ]
}